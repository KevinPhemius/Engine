<?xml version="1.0"?>

<CompositionSpecification xmlns="http://netide.eu/schemas/compositionspecification/v1">
  <Modules>
    <Module id="appA" loaderIdentification="ryu-fw.py" />
    <Module id="appB" loaderIdentification="poxB" />
    <Module id="appC" loaderIdentification="ODL1">
      <CallFilter event="packetIn portStatus" />
    </Module>
  </Modules>
  <Composition>
    <ModuleCall id="appA" allowVetoResult="true" />
    <ParallelCall mergePolicy="priority">
      <ModuleCall id="appB" />
      <ModuleCall id="appC" />
    </ParallelCall>
    <Branch>
      <If event="packetIn flowMod">
        <ModuleCall id="appA" />
      </If>
      <Else>
        <ModuleCall id="appC" />
      </Else>
    </Branch>
  </Composition>
</CompositionSpecification>