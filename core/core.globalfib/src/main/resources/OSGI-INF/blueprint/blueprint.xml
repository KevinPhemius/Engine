<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <bean id="GlobalFIB"
          class="eu.netide.core.globalifb.FIBManager"
          scope="singleton"
          init-method="Start"
          destroy-method="Stop">
        <property name="connector" ref="shimConnector"/>
        <property name="shimMessageListeners" ref="listeners"/>
    </bean>

    <bean id="shimConnector" class="eu.netide.core.shimconnectivity.ZeroMQBasedShimConnector"
          init-method="Start"
          destroy-method="Stop">
        <property name="port" value="${port}"/>
    </bean>

    <service ref="ShimManager"
             activation="eager"
             interface="eu.netide.core.api.IShimManager"/>

    <reference-list id="listeners" interface="eu.netide.core.api.IShimMessageListener" activation="eager"
                    availability="optional" member-type="service-object"/>
</blueprint>