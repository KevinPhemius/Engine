{
	"types": {
		"IP": {
			"type": "String",
			"constraint": "match('([0-9]{1,3}\\.){3}[0-9]{1,3}')"
		},
		"FirewallRule": {
			"policy": {
				"type": ["allow", "deny"]
			},
			"dstip": { "type": "IP" },
			"srcip": { "type": "IP" }
		}
	},
	"parameters": {
		"WebInterface": { "type": "boolean" },
		"FirewallRules": {
			"type": {
				"defaultPolicy": ["allow", "deny"],
				"rules": "list(FirewallRules)"
			}
		}
	}
}
